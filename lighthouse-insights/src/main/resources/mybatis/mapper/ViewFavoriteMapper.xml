<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dtstep.lighthouse.insights.dao.ViewFavoriteDao">
    <resultMap id="viewFavoriteResultMap" type="com.dtstep.lighthouse.common.modal.ViewFavorite">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="cate_id" property="cateId"/>
        <result column="user_id" property="userId"/>
        <result column="element_type" property="elementType" typeHandler="com.dtstep.lighthouse.insights.types.ViewElementEnumTypeHandler"/>
        <result column="config" property="config"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="com.dtstep.lighthouse.common.modal.ViewFavorite">
        INSERT INTO ldp_views_favorites (`name`,`cate_id`,`user_id`,`element_type`,`config`,`create_time`,`update_time`) VALUES
        (
            #{name,jdbcType=VARCHAR},
            #{cateId,jdbcType=INTEGER},
            #{userId,jdbcType=INTEGER},
            #{elementType,jdbcType=INTEGER,typeHandler=com.dtstep.lighthouse.insights.types.ViewElementEnumTypeHandler},
            #{config,jdbcType=VARCHAR},
            #{createTime,jdbcType=TIMESTAMP},
            #{updateTime,jdbcType=TIMESTAMP}
        )
    </insert>

    <select id="queryList" resultMap="viewFavoriteResultMap">
        select `id`,`name`,`cate_id`,`user_id`,`element_type`,`config`,`create_time`,`update_time` from ldp_views_favorites
        <where>
            <if test="queryParam.cateId!=null">
                AND cate_id = #{queryParam.cateId}
            </if>
            <if test="queryParam.search != null">
                AND name LIKE CONCAT('%', #{queryParam.search}, '%')
            </if>
        </where>
        order by create_time desc
    </select>

    <select id="count" resultType="int">
        select count(*) from ldp_views_favorites
        <where>
            <if test="queryParam.cateId != null">
                AND cate_id = #{queryParam.cateId}
            </if>
            <if test="queryParam.search != null">
                AND name LIKE CONCAT('%', #{queryParam.search}, '%')
            </if>
        </where>
    </select>

    <delete id="deleteById" parameterType="int">
        delete from ldp_views_favorites where id = #{id}
    </delete>

    <update id="update" parameterType="com.dtstep.lighthouse.common.modal.ViewFavorite">
        UPDATE ldp_views_favorites
        <set>
            <if test="name != null">
                `name` = #{name},
            </if>
            <if test="cateId != null">
                `cate_id` = #{cateId},
            </if>
            <if test="updateTime != null">
                `update_time` = #{updateTime},
            </if>
        </set>
        WHERE id = #{id}
    </update>
</mapper>