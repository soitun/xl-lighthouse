{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "declarationDir": "./build",
    "sourceMap": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "noEmit": false,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "rootDirs": [
      "common/src/",
      "arco-design-pro-cra/src/",
      "arco-design-pro-next/src/"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
